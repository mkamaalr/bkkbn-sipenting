<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Data binding jika diperlukan, untuk saat ini tidak ada -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        tools:context=".ui.pregnantmother.PregnantMotherListFragment">

        <!-- Toolbar atau Header (Opsional, tergantung desain Anda) - HAPUS INI!
             Jika Anda sudah memiliki Toolbar di MainActivity, ini akan duplikat.
             Judul akan diambil dari android:label di NavGraph.
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="Daftar Ibu Hamil"
                app:titleTextColor="@android:color/white"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>
        -->

        <!-- RecyclerView untuk menampilkan daftar ibu hamil -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_pregnant_mothers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingHorizontal="4dp"
            android:clipToPadding="false"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_pregnant_mother" />

        <!-- Pesan ketika daftar kosong -->
        <TextView
            android:id="@+id/tv_empty_list_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak ada data ibu hamil yang ditemukan.\nTekan tombol '+' untuk menambah."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/recycler_view_pregnant_mothers"
            app:layout_constraintBottom_toBottomOf="@id/recycler_view_pregnant_mothers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

        <!-- ProgressBar untuk indikator loading -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Floating Action Button untuk menambah ibu hamil baru -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_pregnant_mother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add_white_24dp"
            app:tint="@android:color/white"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="Tambah Ibu Hamil" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
