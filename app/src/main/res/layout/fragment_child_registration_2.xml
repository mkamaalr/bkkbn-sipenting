<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                tools:context=".ui.child.registration.ChildRegistrationFragment2">

                <TextView
                    android:id="@+id/tv_title_visit"
                    android:text="Detail Kunjungan Anak"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_visit_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Tanggal Kunjungan"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_visit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_visit_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_pregnant_mother_status"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Status Anak Saat Ini"
                    app:layout_constraintTop_toBottomOf="@id/til_visit_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/et_pregnant_mother_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_title_birth"
                    android:text="Detail Kelahiran (Diisi jika belum ada)"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/til_pregnant_mother_status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_pregnancy_age_when_childbirth"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Usia Kehamilan saat Lahir (minggu)"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_birth"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_pregnancy_age_when_childbirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/layout_birth_measurements"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/til_pregnancy_age_when_childbirth"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_weight_birth"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:hint="Berat Lahir (kg)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_weight_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_height_birth"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:hint="Panjang Lahir (cm)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_height_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_title_measurement"
                    android:text="Pengukuran Saat Ini"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/layout_birth_measurements"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_measurement_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Tanggal Pengukuran"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_measurement"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_measurement_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/layout_current_measurements"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/til_measurement_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_weight_measurement"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:hint="Berat Badan (kg)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_weight_measurement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_height_measurement"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:hint="Tinggi Badan (cm)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_height_measurement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_head_circumference"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Lingkar Kepala (cm)"
                    app:layout_constraintTop_toBottomOf="@id/layout_current_measurements"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_head_circumference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_title_status"
                    android:text="Status Gizi, Kesehatan &amp; Layanan"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/til_head_circumference"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView android:id="@+id/tv_asi_exclusive_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/tv_title_status" app:layout_constraintStart_toStartOf="parent" android:text="ASI Eksklusif?"/>
                <RadioGroup android:id="@+id/rg_is_asi_exclusive" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_asi_exclusive_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_asi_exclusive_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_asi_exclusive_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <TextView android:id="@+id/tv_ongoing_asi_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/rg_is_asi_exclusive" app:layout_constraintStart_toStartOf="parent" android:text="Masih Diberi ASI?"/>
                <RadioGroup android:id="@+id/rg_is_ongoing_asi" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_ongoing_asi_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_ongoing_asi_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_ongoing_asi_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <TextView android:id="@+id/tv_mpasi_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/rg_is_ongoing_asi" app:layout_constraintStart_toStartOf="parent" android:text="Diberikan MP-ASI?"/>
                <RadioGroup android:id="@+id/rg_is_mpasi" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_mpasi_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_mpasi_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_mpasi_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <TextView android:id="@+id/tv_posyandu_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/rg_is_mpasi" app:layout_constraintStart_toStartOf="parent" android:text="Ikut Posyandu Bulan Ini?"/>
                <RadioGroup android:id="@+id/rg_is_posyandu_month" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_posyandu_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_posyandu_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_posyandu_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <TextView android:id="@+id/tv_bkb_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/rg_is_posyandu_month" app:layout_constraintStart_toStartOf="parent" android:text="Ikut BKB Bulan Ini?"/>
                <RadioGroup android:id="@+id/rg_is_bkb_month" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_bkb_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_bkb_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_bkb_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <TextView android:id="@+id/tv_mbg_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/rg_is_bkb_month" app:layout_constraintStart_toStartOf="parent" android:text="Menerima Makanan Bergizi Gratis?"/>
                <RadioGroup android:id="@+id/rg_is_received_mbg" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_mbg_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_mbg_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_mbg_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <TextView android:id="@+id/tv_exposed_to_smoke_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/rg_is_received_mbg" app:layout_constraintStart_toStartOf="parent" android:text="Terpapar Asap Rokok?"/>
                <RadioGroup android:id="@+id/rg_is_exposed_to_cigarettes" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_exposed_to_smoke_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_smoke_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_smoke_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <TextView android:id="@+id/tv_kka_filled_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/rg_is_exposed_to_cigarettes" app:layout_constraintStart_toStartOf="parent" android:text="KKA Diisi?"/>
                <RadioGroup android:id="@+id/rg_is_kka_filled" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_kka_filled_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_kka_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_kka_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_kka_result"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Hasil KKA"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/rg_is_kka_filled"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/actv_kka_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView android:id="@+id/tv_on_contraception_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/til_kka_result" app:layout_constraintStart_toStartOf="parent" android:text="Ibu Menggunakan KB?"/>
                <RadioGroup android:id="@+id/rg_on_contraception" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_on_contraception_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_contraception_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_contraception_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_contraception_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Jenis KB"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/rg_on_contraception"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/actv_contraception_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_contraception_reason_for_use"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Alasan Menggunakan KB"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/til_contraception_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible">
                    <AutoCompleteTextView
                        android:id="@+id/et_contraception_reason_for_use"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_contraception_rejection_reason"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Alasan Tidak Menggunakan KB"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rg_on_contraception"
                    tools:visibility="visible">
                    <AutoCompleteTextView
                        android:id="@+id/et_contraception_rejection_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_contraception"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="til_contraception_reason_for_use, til_contraception_rejection_reason" />

                <TextView android:id="@+id/tv_is_counseling_received_label" style="@style/FormLabel" app:layout_constraintTop_toBottomOf="@id/barrier_contraception" app:layout_constraintStart_toStartOf="parent" android:text="Menerima Konseling?"/>
                <RadioGroup android:id="@+id/rg_is_counseling_received" style="@style/FormRadioGroup" app:layout_constraintTop_toBottomOf="@id/tv_is_counseling_received_label" app:layout_constraintStart_toStartOf="parent">
                    <RadioButton android:id="@+id/rb_is_counseling_received_yes" android:text="Ya" style="@style/FormRadioButton"/>
                    <RadioButton android:id="@+id/rb_is_counseling_received_no" android:text="Tidak" style="@style/FormRadioButton"/>
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_counseling_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Jenis Konseling"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/rg_is_counseling_received"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/et_counseling_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_facilitating_referral_service"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Status Fasilitasi Rujukan"
                    app:layout_constraintTop_toBottomOf="@id/til_counseling_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/et_facilitating_referral_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_facilitating_social_assistance"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Status Fasilitasi Bansos"
                    app:layout_constraintTop_toBottomOf="@id/til_facilitating_referral_service"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/et_facilitating_social_assistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_immunization_label"
                    android:text="Imunisasi yang Diberikan"
                    style="@style/FormLabel"
                    app:layout_constraintTop_toBottomOf="@id/til_facilitating_social_assistance"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_immunizations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_immunization_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:singleLine="false"/>

                <TextView
                    android:id="@+id/tv_drinking_water_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Sumber Air Minum Utama"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_immunizations"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_drinking_water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_drinking_water_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_drinking_water_other"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Sebutkan Sumber Air Lainnya"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_drinking_water">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_drinking_water_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_defecation_facility_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Fasilitas Jamban"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    app:layout_constraintTop_toBottomOf="@id/til_drinking_water_other"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_defecation_facility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_defecation_facility_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_defecation_facility_other"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Sebutkan Fasilitas Lainnya"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_defecation_facility">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_defecation_facility_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_social_assistance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Fasilitasi Bantuan Sosial Diterima"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    app:layout_constraintTop_toBottomOf="@id/til_defecation_facility_other"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_social_assistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_social_assistance_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_social_assistance_other"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Sebutkan Bantuan Lainnya"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_social_assistance">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_social_assistance_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_attachment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Dokumentasi &amp; Lokasi"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    app:layout_constraintTop_toBottomOf="@id/til_social_assistance_other"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/layout_images"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_attachment_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_preview1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:background="?attr/colorSurfaceVariant"
                            app:srcCompat="@drawable/ic_menu_camera"/>
                        <Button
                            android:id="@+id/btn_capture1"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ambil Foto 1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp">
                        <ImageView
                            android:id="@+id/iv_preview2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:background="?attr/colorSurfaceVariant"
                            app:srcCompat="@drawable/ic_menu_camera"/>
                        <Button
                            android:id="@+id/btn_capture2"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ambil Foto 2"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_get_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="?attr/materialButtonOutlinedStyle"
                    android:text="Ambil Lokasi GPS Saat Ini"
                    app:icon="@drawable/ic_menu_gallery"
                    app:layout_constraintTop_toBottomOf="@id/layout_images"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_location_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:layout_constraintTop_toBottomOf="@id/btn_get_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Lat: -6.9175, Long: 107.6191" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_tpk_notes"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Catatan dari TPK"
                    app:layout_constraintTop_toBottomOf="@id/tv_location_result"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_tpk_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:minLines="3"
                        android:inputType="textMultiLine"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_next_visit_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Tgl Kunjungan Berikutnya"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:layout_constraintTop_toBottomOf="@id/til_tpk_notes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_next_visit_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:id="@+id/button_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/til_next_visit_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="1.0">
                    <Button
                        android:id="@+id/btn_previous"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Kembali" />
                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Simpan" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            tools:visibility="visible"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
